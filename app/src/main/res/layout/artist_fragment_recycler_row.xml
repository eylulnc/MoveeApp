<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/artistRecyclerPersonName"
        android:layout_width="@dimen/artist_recycler_row_text_width"
        android:layout_height="@dimen/artist_recycler_row_text_height"
        android:background="@color/teal_700"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:singleLine="false"
        android:textColor="@color/white"
        android:textSize="@dimen/artist_recycler_row_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/artist_recycler_row_text_padding"
        android:layout_margin="@dimen/artist_recycler_row_text_margin"
        tools:text="TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>