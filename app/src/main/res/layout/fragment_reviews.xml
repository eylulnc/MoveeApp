<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.moviedetail.reviews.ReviewsFragment"
    android:background="@color/black_gray">

    <TextView
        android:id="@+id/textView"
        android:textSize="@dimen/review_recyclerview_text_size"
        android:layout_marginTop="@dimen/review_recyclerview_text_marginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_gray"
        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/no_review_found"
        android:textColor="@color/white_light_grey" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewFragmentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/review_recyclerview_marginBottom"/>
</FrameLayout>