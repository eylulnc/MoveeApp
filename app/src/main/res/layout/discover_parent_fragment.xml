<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".ui.discover.DiscoverFragment">

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/discover_parent_categoryText_marginStart"
        android:layout_marginTop="@dimen/discover_parent_categoryText_marginTop"
        android:layout_marginEnd="@dimen/discover_parent_categoryText_marginEnd"
        android:text="@string/most_popular"
        android:textColor="@color/black"
        android:textSize="@dimen/discover_parent_categoryText_size" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/discoverRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/discover_parent_discoverRecyclerView_marginTop"
        android:scrollbars="horizontal" />

</LinearLayout>