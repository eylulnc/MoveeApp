<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerRowConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/discover_child_rowLayout_marginStart"
    android:layout_marginEnd="@dimen/discover_child_rowLayout_marginEnd">

    <ImageView
        android:id="@+id/movieListRecyclerViewImage"
        android:layout_width="@dimen/discover_child_recycler_row_image_width"
        android:layout_height="@dimen/discover_child_recycler_row_image_height"
        android:layout_marginTop="@dimen/discover_child_recycler_row_image_marginTop"
        android:contentDescription="@string/movieImage"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movieListRecyclerViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/discover_child_recycler_row_text_margin"
        android:layout_marginEnd="@dimen/discover_child_recycler_row_text_margin"
        android:layout_marginBottom="@dimen/discover_child_recycler_row_text_margin"
        android:background="@color/black_gray"
        android:ellipsize="end"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="@dimen/discover_child_recycler_view_name_min_height"
        android:paddingLeft="@dimen/discover_child_recycler_row_text_padding"
        android:paddingRight="@dimen/discover_child_recycler_row_text_padding"
        android:singleLine="false"
        android:text="@string/movie_name"
        android:textAlignment="center"
        android:textColor="@color/white_light_grey"
        android:textSize="@dimen/discover_child_recycler_view_name_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/movieListRecyclerViewImage"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/movieListRecyclerViewImage"
        app:layout_constraintTop_toBottomOf="@+id/movieListRecyclerViewImage"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/discoverRowTemplate"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>