<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerRowConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/movieListRecyclerViewImage"
        android:layout_width="@dimen/recycler_row_image_width"
        android:layout_height="@dimen/recycler_row_image_height"
        android:layout_margin="@dimen/recycler_row_image_margin"
        android:contentDescription="@string/movieImage"
        android:scaleType="fitCenter"
        android:transitionName="@string/list_to_detail_transition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movieListRecyclerViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/recycler_row_text_margin"
        android:gravity="center"
        android:singleLine="false"
        android:minHeight="@dimen/movie_list_recycler_view_name_min_height"
        android:text="@string/movie_name"
        android:textColor="@color/teal_700"
        android:textSize="@dimen/movie_list_recycler_view_name_font_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/movieListRecyclerViewImage"
        app:layout_constraintStart_toStartOf="@+id/movieListRecyclerViewImage"
        app:layout_constraintTop_toBottomOf="@+id/movieListRecyclerViewImage" />
</androidx.constraintlayout.widget.ConstraintLayout>