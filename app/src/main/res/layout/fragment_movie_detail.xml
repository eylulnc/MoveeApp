<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailFragment">

    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_movie_image_height"
        android:layout_marginStart="@dimen/detail_movie_image_margin_start"
        android:layout_marginTop="@dimen/detail_movie_image_margin_top"
        android:layout_marginEnd="@dimen/detail_movie_image_margin_end"
        android:scaleType="fitCenter"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/movieImage"
        android:transitionName="@string/list_to_detail_transition" />

    <TextView
        android:id="@+id/movieName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/detail_movie_name_margin_start"
        android:layout_marginTop="@dimen/detail_movie_name_margin_top"
        android:layout_marginEnd="@dimen/detail_movie_name_margin_end"
        android:gravity="center"
        android:text="@string/movie_name"
        android:textSize="@dimen/detail_movie_name_font_size"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieImage"
        />

    <TextView
        android:id="@+id/movieInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/detail_movie_info_margin_start"
        android:layout_marginTop="@dimen/detail_movie_info_margin_top"
        android:layout_marginEnd="@dimen/detail_movie_info_margin_end"
        android:layout_marginBottom="@dimen/detail_movie_info_margin_bottom"
        android:text="@string/movie_info"
        android:textSize="@dimen/detail_movie_info_font_size"
        android:singleLine="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieName" />
</androidx.constraintlayout.widget.ConstraintLayout>