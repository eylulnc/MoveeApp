<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll"
            tools:context=".ui.moviedetail.MovieDetailFragment">


            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/playerView"
                android:layout_width="wrap_content"
                android:layout_height="167dp"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </com.google.android.exoplayer2.ui.PlayerView>

            <ImageView
                android:id="@+id/detailImagePoster"
                android:layout_width="@dimen/detail_movie_detailImagePoster_width"
                android:layout_height="@dimen/detail_movie_detailImagePoster_height"
                android:layout_marginStart="@dimen/detail_movie_detailImagePoster_margin_start"
                android:layout_marginTop="@dimen/detail_movie_detailImagePoster_margin_top"
                android:contentDescription="@string/movie_poster"
                android:transitionName="@string/list_to_detail_transition"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/playerView"
                tools:src="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textRatingBarConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/detail_movie_textRatingBarConstraintLayout_margin_start"
            android:layout_marginTop="@dimen/detail_movie_textRatingBarConstraintLayout_margin_top"
            android:layout_marginEnd="@dimen/detail_movie_textRatingBarConstraintLayout_margin_end"
            android:layout_marginBottom="@dimen/detail_movie_textRatingBarConstraintLayout_margin_bottom"
            app:layout_constraintBottom_toBottomOf="@+id/detailImagePoster"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/detailImagePoster"
            app:layout_constraintTop_toBottomOf="@+id/playerView"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/detailDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/detail_movie_detailDurationText_margin_start"
                android:layout_marginTop="@dimen/detail_movie_detailDurationText_margin_top"
                android:textSize="@dimen/detail_movie_detailDurationText_textSize"
                app:layout_constraintStart_toEndOf="@+id/detailReleaseDateText"
                app:layout_constraintTop_toBottomOf="@+id/languageText"
                tools:text="TextView" />

            <TextView
                android:id="@+id/detailReleaseDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_movie_detailReleaseDate_margin_top"
                android:textSize="@dimen/detail_movie_detailReleaseDate_textSize"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/languageText"
                tools:text="TextView" />

            <TextView
                android:id="@+id/detailMovieNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_movie_detailMovieNameText_margin_top"
                android:textSize="@dimen/detail_movie_detailMovieNameText_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="MovieName" />

            <TextView
                android:id="@+id/languageText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_movie_languageStringText_margin_top"
                android:text="@string/language"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/detail_movie_languageStringText_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailRatingBar" />

            <RatingBar
                android:id="@+id/detailRatingBar"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_movie_ratingBar_margin_top"
                android:numStars="5"
                app:layout_constraintEnd_toEndOf="parent"
                android:theme="@style/RatingBar"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailGenreNameText" />

            <TextView
                android:id="@+id/detailGenreNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/detail_movie_detailGenreNameText_margin_top"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/detail_movie_detailGenreNameText_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailMovieNameText"
                tools:text="Genres" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/detail_movie_relativeLayout_marginStart"
            android:layout_marginTop="@dimen/detail_movie_relativeLayout_marginTop"
            android:layout_marginEnd="@dimen/detail_movie_relativeLayout_marginEnd"
            android:minHeight="@dimen/detail_movie_relativeLayout_minHeight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailImagePoster">

            <com.ms.square.android.expandabletextview.ExpandableTextView
                android:id="@+id/expand_text_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:maxCollapsedLines="3">

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:background="@android:color/transparent" />

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/detail_movie_expandableText_size" />

            </com.ms.square.android.expandabletextview.ExpandableTextView>
        </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/detail_movie_nestedScrollView_margin_top"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/detailTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cast" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more" />
            </com.google.android.material.tabs.TabLayout>

            <androidx.viewpager2.widget.ViewPager2
                android:layout_marginTop="@dimen/detail_movie_viewPager_margin_top"
                android:id="@+id/movieDetailViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/detailTabLayout" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>